generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Todo{
  id        Int      @default(autoincrement()) @id
  task String 
  description String?
  status TodoStatus
  createdat DateTime @default(now())
  updatedat DateTime @updatedAt

}

model User{
  id Int @default(autoincrement()) @id
  email String @unique
  password String
  name String
}

enum TodoStatus{
  DONE
  ACTIVE
}
